<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>CSS User Profile Card</title>
  <link rel="stylesheet" href="styles.css">
  <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
</head>

<body>

  <div class="wrapper">
    <div class="left">
      <h4><%= user.name%></h4>
      <p>UI Developer</p>
    </div>
    <div class="right">
      <h3>Thông Tin NGười Dùng</h3>
      <div class="info" id="info">
        
        <div class="info_data">
          <div class="data">
            <h4>Email</h4>
            <p><%= user.email%></p>
          </div>
          <div class="data">
            <h4>Phone</h4>
            <p><%=user.phone%></p>
          </div>
        </div>
        <div class="href_profile">
          <button type="button" class="togg-btn" onclick="quaylai()">Thay Đổi</button>
        </div>
        <div class="href_profile">
          <a href="/"> <button type="button" class="togg-btn"> Cancel</button></a>
          </div>
  

      </div>
      <form id="form" action="/users/site/page/profile" class="info" method="POST">
        <input name="name" id="name" value="<%= user.name%>"  class="input-field" placeholder="Name" required>
        <input name="email" id="email" value="<%= user.email%>"  class="input-field" placeholder="Email " required>
        <input name="phone" id="phone" value="<%= user.phone%>"  class="input-field" placeholder="Phone " required>
        <button type="submit" class="submit-btn">Thay Đổi </button>
        <div class="href_profile">
        <button type="button" class="togg-btn"  onclick="Thaydoi()">Quay Lại</button>
        </div>
    
      </form>



      <div class="social_media">
        <ul>
          <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
          <li><a href="#"><i class="fab fa-twitter"></i></a></li>
          <li><a href="#"><i class="fab fa-instagram"></i></a></li>
        </ul>
      </div>

    </div>
  </div>
  <script>
    var x = document.getElementById("form");
    var y = document.getElementById("info");
   
   
    function Thaydoi(){
        x.style.right ="-600px";
        y.style.right= "55px";
       

    } function quaylai(){
        x.style.right = "55px";
        y.style.right = "-1000px";
       

    }



</script>
    
</body>

</html>
<style>
   @import url('https://fonts.googleapis.com/css?family=Josefin+Sans&display=swap');

